<UserControl x:Class="Mailium.Compose"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mailium"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="New Mail" FontWeight="Bold" FontSize="24" Margin="0,0,0,10"/>

            <TextBlock Text="To:" FontSize="16"/>
            <TextBox x:Name="txtRecipient" Width="300" Margin="0,0,0,10" HorizontalAlignment="Left" FontSize="16"/>

            <TextBlock Text="Subject:" FontSize="16"/>
            <TextBox x:Name="txtSubject" Width="300" Margin="0,0,0,10" HorizontalAlignment="Left" FontSize="16"/>

            <TextBlock Text="Content:" FontSize="16"/>
            <TextBox x:Name="txtContent" Width="300" Height="100" Margin="0,0,0,10" TextWrapping="Wrap" AcceptsReturn="True" HorizontalAlignment="Left" FontSize="16"/>

            <Button Content="Send" Width="80" Height="30" HorizontalAlignment="Left" Click="Button_Click" FontSize="16"/>
        </StackPanel>
    </Grid>
</UserControl>
